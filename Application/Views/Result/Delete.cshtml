@using Application.Models.ViewModel;
@model ResultViewModel
@{
    var Students = new SelectList(ViewBag.Students, "StudentId", "StudentName");
    var Cources = new SelectList(ViewBag.Cources, "CourcesId", "CourcesName");
    ViewData["Title"] = "Delete";
  
}

<h1>Delete Result</h1>
<br />
<br />
<h3>Are You Sure to Delete This Result</h3>
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Result">
            <input hidden asp-for="ResultId" />
            <div class="form-group">
                <label asp-for="@Model.ResultDegree" class="col-form-label"></label>
                <input asp-for="@Model.ResultDegree" class="form-control" readonly />
            </div>
            
           <div class="form-group">
                <label asp-for="@Model.student.StudentName" class="col-form-label"></label>
