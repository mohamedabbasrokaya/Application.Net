@using Application.Models.ViewModel;
@model CourcesViewModel
@{
    ViewData["Title"] = "Delete";

}

<h1>Delete Cource</h1>
<br />
<br />
<h3>Are You Sure to Delete This Cource</h3>
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Cource">
            <input hidden asp-for="CourcesId" />
            <div class="form-group">
                <label asp-for="@Model.CourcesName" class="col-form-label"></label>
                <input asp-for="@Model.CourcesName" class="form-control" readonly />
            </div>

             <div class="form-group">
                <label asp-for="@Model.Code" class="col-form-label"></label>
                <input asp-for="@Model.Code" class="form-control" readonly />
            </div>

           
          

            <input type="submit" class="btn btn-danger" value="Delete" /> |
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>

    </div>

</div>





