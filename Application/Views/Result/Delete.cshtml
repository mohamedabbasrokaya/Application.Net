            </div>
            <div class="form-group">
                <label asp-for="@Model.Cources.CourcesName" class="col-form-label"></label>
                <input asp-for="@Model.Cources.CourcesName" class="form-control" readonly />
            </div>
          

            <input type="submit" class="btn btn-danger" value="Delete" /> |
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>

    </div>

</div>





