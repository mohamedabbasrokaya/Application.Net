@using Application.Models.ViewModel;
@model CourcesViewModel
@{
    ViewData["Title"] = "Add";
    
}

<h1>Add New Result</h1>
<br />
<br />

<div class="row">
    <div class="col-6">
        <form asp-action="Create" asp-controller="Cource"> 
            <div class="form-group">

                <label asp-for="@Model.CourcesName" class="col-form-label"></label>
                <input asp-for="@Model.CourcesName" class="form-control" />
                <span asp-validation-for="@Model.CourcesName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="@Model.Code" class="col-form-label"></label>
                <input asp-for="@Model.Code" class="form-control" />
                <span asp-validation-for="@Model.Code" class="text-danger"></span>
            </div>
          
            <input type="submit" value="Add" class="btn btn-primary"/>
            <a asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>



