@using Application.Models.ViewModel;
@model StudentViewModel
@{
    ViewData["Title"] = "Delete";

}

<h1>Delete Student</h1>
<br />
<br />
<h3>Are You Sure to Delete This Student</h3>
<div class="row">
    <div class="col-6">
        <form asp-action="Delete" asp-controller="Student">
            <input hidden asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="@Model.StudentName" class="col-form-label"></label>
                <input asp-for="@Model.StudentName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.StudentAdress" class="col-form-label"></label>
                <input asp-for="@Model.StudentAdress" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone" class="col-form-label"></label>
                <input asp-for="@Model.Phone" class="form-control" name="Phone" readonly />
            </div>
          

            <input type="submit" class="btn btn-danger" value="Delete" /> |
            <a class="btn btn-light" asp-action="Index">Back To List</a>
        </form>

    </div>

</div>





